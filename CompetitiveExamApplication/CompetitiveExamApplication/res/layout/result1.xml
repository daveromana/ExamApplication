<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg7"
    android:orientation="vertical" >
    
      <TextView
        android:id="@+id/TV1"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@drawable/textview"
        android:gravity="center"
        android:text="@string/result"
        android:textAppearance="?android:attr/textAppearanceLarge"
  		android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:typeface="normal" />

       <TextView
        android:id="@+id/tv_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_gravity="right"
    	android:background="@drawable/logout"
        android:textColor="#99FF0000"
        android:text="LOGOUT"
        android:textAppearance="?android:attr/textAppearanceMedium" />
      
      <Button
          android:id="@+id/res_button1"
          android:layout_gravity="center"
		  android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_marginTop="20dp"
          android:drawableTop="@drawable/table"
          android:textColor="#FF0000FF"
          android:background="@drawable/mainclick"
          android:text="Table View" />

      <Button
          android:id="@+id/res_button2"
		  android:layout_width="150dp"
          android:layout_height="150dp"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:drawableTop="@drawable/graph"
          android:textColor="#FF0000FF"
          android:background="@drawable/mainclick"
          android:text="Graph View" />

</LinearLayout>
