                 android:textAppearance="?android:attr/textAppearanceMedium" />

             <TextView
                 android:id="@+id/textView8"
                 android:layout_width="200dp"
                 android:layout_height="wrap_content"
                 android:background="@drawable/logintext"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

         </TableRow>
         
          <TableRow
             android:id="@+id/tableRow5"
